<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AfficherZone"
            style="-fx-background-color: #f4fbe5;">

    <children>


        <Text layoutX="170.0" layoutY="50.0"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Détails de la Zone"
              fill="#3e8e41">
            <font>
                <Font size="24.0" />
            </font>
        </Text>


        <TextField fx:id="superficie"
                   editable="false"
                   layoutX="80.0" layoutY="90.0"
                   prefWidth="440.0"
                   promptText="Superficie"
                   style="-fx-background-color: white; -fx-border-color: #a7dba7; -fx-border-radius: 5;" />

        <TextField fx:id="nomdezone"
                   editable="false"
                   layoutX="80.0" layoutY="150.0"
                   prefWidth="440.0"
                   promptText="Nom de la zone"
                   style="-fx-background-color: white; -fx-border-color: #a7dba7; -fx-border-radius: 5;" />

        <TextField fx:id="localisation"
                   editable="false"
                   layoutX="80.0" layoutY="210.0"
                   prefWidth="440.0"
                   promptText="Localisation"
                   style="-fx-background-color: white; -fx-border-color: #a7dba7; -fx-border-radius: 5;" />


        <Button fx:id="btnRetourListe"
                layoutX="220.0" layoutY="300.0"
                onAction="#retourListeZones"
                text="Retour à la liste des zones"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;" />

    </children>
</AnchorPane>
