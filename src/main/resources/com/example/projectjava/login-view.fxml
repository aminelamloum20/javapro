<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600" prefWidth="800" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginViewController">

    <VBox alignment="CENTER" layoutX="150" layoutY="100" prefWidth="300" spacing="15">
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Login" />

        <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 250;" />

        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 250;" />

        <Button onAction="#handleLogin" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-pref-width: 250;" text="Login" />

        <Label fx:id="statusLabel" style="-fx-font-size: 12px;" textFill="red" />
    </VBox>
   <HBox alignment="CENTER">
      <children>
          <Label fx:id="registerLabel"
                 text="Register"
                 onMouseClicked="#handleRegister"
                 style="-fx-text-fill: #2196F3; -fx-underline: true; -fx-cursor: hand;" />
      </children>
   </HBox>
</VBox>
