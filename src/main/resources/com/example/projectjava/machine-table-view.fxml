<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.MachineTableViewController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f5f5f7;">

    <top>
        <VBox spacing="5" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Liste des Machines"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Label text="Toutes les machines enregistrées"
                   style="-fx-font-size: 12px; -fx-text-fill: #dfe6e9;" />
        </VBox>
    </top>

    <center>
        <TableView fx:id="machineTable" prefWidth="780" style="-fx-padding: 20;">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                <TableColumn fx:id="nameColumn" text="Nom" prefWidth="160"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="120"/>
                <TableColumn fx:id="etatColumn" text="État" prefWidth="100"/>
                <TableColumn fx:id="priceColumn" text="Prix/Jour" prefWidth="100"/>
                <TableColumn fx:id="marqueColumn" text="Marque" prefWidth="100"/>
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="160"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 20;">
            <Button text="Retour" onAction="#handleBack"
                    style="-fx-background-color: #636e72; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>
