            <Label fx:id="machineName"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2e5e1a;" />

            <Label fx:id="machineType"
                   style="-fx-text-fill: #4b6d2c;" />

            <Label fx:id="machineEtat"
                   style="-fx-text-fill: #6e8e3e;" />

            <Label fx:id="machinePrix"
                   style="-fx-text-fill: #28a745; -fx-font-weight: bold;" />
        </VBox>

    </HBox>
</AnchorPane>
