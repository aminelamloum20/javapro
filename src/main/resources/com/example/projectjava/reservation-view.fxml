<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ReservationViewController"
            prefHeight="520.0" prefWidth="860.0"
            style="-fx-background-color: linear-gradient(to bottom, #eef9e6, #d2f0c0);">

    <HBox spacing="50" alignment="CENTER"
          AnchorPane.topAnchor="40" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="40">

        <!-- Reservation Form -->
        <VBox spacing="14" alignment="TOP_CENTER"
              style="-fx-background-color: #ffffff; -fx-padding: 25;
                     -fx-background-radius: 12;
                     -fx-effect: dropshadow(gaussian, rgba(160,200,110,0.25), 10, 0.1, 0, 4);"
              maxWidth="320">

            <Label text="ðŸŒ¾ RÃ©server une Machine"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e5e1a;" />

            <Label text="ðŸšœ Machine disponible :" style="-fx-font-weight: bold; -fx-text-fill: #4b6d2c;" />
            <ComboBox fx:id="machineComboBox"
                      promptText="Choisir une machine"
                      style="-fx-pref-width: 260; -fx-background-radius: 6;" />

            <Label text="ðŸ“… Date de dÃ©but :" style="-fx-font-weight: bold; -fx-text-fill: #4b6d2c;" />
            <DatePicker fx:id="startDatePicker"
                        style="-fx-pref-width: 260; -fx-background-radius: 6;" />

            <Label text="ðŸ“† Date de fin :" style="-fx-font-weight: bold; -fx-text-fill: #4b6d2c;" />
